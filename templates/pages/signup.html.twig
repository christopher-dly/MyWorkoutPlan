{% extends "pages/layout.html.twig" %}

{% block main %}
    <div class='main'>
        <div class='leftBlock'>
			<h2>Inscription :</h2>
            	{{ form_start(signupForm) }}

				<div class='containerSignup'>
					<p class='inputDescriptionSignup'>Nom :</p>
					{{ form_widget(signupForm.name, {'attr': {'class': 'input'}}) }}
					{{ form_errors(signupForm.name) }}
                </div>

                <div class='containerSignup'>
					<p class='inputDescriptionSignup'>Pr√©nom :</p>
					{{ form_widget(signupForm.firstName, {'attr': {'class': 'input'}}) }}
					{{ form_errors(signupForm.firstName) }}
                </div>

                <div class='containerSignup'>
					<p class='inputDescriptionSignup'>Email :</p>
					{{ form_widget(signupForm.email, {'attr': {'class': 'input'}}) }}
					{{ form_errors(signupForm.email) }}
                </div>

                <div class='containerSignup'>
					<p class='inputDescriptionSignup'>Mot de passe :</p>
					{{ form_widget(signupForm.password.first, {'label': '', 'attr': {'placeholder': 'Entrez votre mot de passe', 'class': 'input'}}) }}
					{{ form_errors(signupForm.password.first) }}
                </div>

				<div class='containerSignup'>
					<p class='inputDescriptionSignup'>Confirmation du mot de passe :</p>
					{{ form_widget(signupForm.password.second, {'label': '', 'attr': {'placeholder': 'Confirmez votre mot de passe', 'class': 'input'}}) }}
					{{ form_errors(signupForm.password.second) }}
				</div>

                <div class='containerSignup'>
					<p class='inputDescriptionSignup'>Date de naissance :</p>
					{{ form_widget(signupForm.date, {'attr': {'class': 'input'}}) }}
					{{ form_errors(signupForm.date) }}
                </div>

                <div class='containerSignup'>
					<p class='inputDescriptionSignup'>Taille (facultatif):</p>
					{{ form_widget(signupForm.size, {'attr': {'class': 'input'}}) }}
					{{ form_errors(signupForm.size) }}
                </div>

                <div class='containerSignup'>
					<p class='inputDescriptionSignup'>Poids (facultatif) :</p>
					{{ form_widget(signupForm.weight, {'attr': {'class': 'input'}}) }}
					{{ form_errors(signupForm.weight) }}
                </div>

				{{ form_widget(signupForm.submit, {'attr': {'class': 'buttonInscription'}}) }}
				{{ form_end(signupForm) }}

				{% if app.request.query.get('error')%}
				<p class='errMsg'>cette email existe deja</p>
				{% endif %}
        </div>
        <div class='rightBlock'>
            <img class='imgInscriptionPage' src="img/3.png" alt="image d'un homme s'entreinant avec un sac de frappe" width='400' height='650'>
        </div>
    </div>
{% endblock %}



